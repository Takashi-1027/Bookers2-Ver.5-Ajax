<p id="notice"><%= notice %></p>

<h4>カレンダー</h4>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>開始日</th>
      <th>終了日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= link_to '詳細', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: '削除してもよろしいでしょうか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規イベント', new_event_path %>

<div id="calendar"></div>